{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "noEmit": false,
        "types": ["node"],
        "incremental": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
