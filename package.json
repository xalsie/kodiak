{
    "name": "@xalsie/kodiak",
    "version": "0.0.1",
    "description": "Kodiak: The heavy-duty job queue that mauls latency. Native TypeScript & Lua.",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "keywords": [
        "TypeScript",
        "Lua",
        "Lightweight",
        "DragonflyDB"
    ],
    "homepage": "https://github.com/xalsie/kodiak#readme",
    "bugs": {
        "url": "https://github.com/xalsie/kodiak/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xalsie/kodiak.git"
    },
    "license": "ISC",
    "author": "LeGrizzly",
    "type": "module",
    "main": "dist/presentation/index.js",
    "scripts": {
        "build": "tsc && node -e \"const fs = require('fs'); fs.cpSync('src/infrastructure/redis/lua', 'dist/infrastructure/redis/lua', {recursive: true});\"",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "example": "tsc --esModuleInterop --allowSyntheticDefaultImports --module node20 --lib es2024 --moduleResolution node16 examples/simple.ts && node examples/simple.js",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write ."
    },
    "dependencies": {
        "ioredis": "^5.9.1"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.7",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^30.2.0",
        "prettier": "^3.7.4",
        "semantic-release": "^25.0.2",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.0"
    }
}
